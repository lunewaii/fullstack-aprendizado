    <style>
        .conteudo h2 span {
            font-size: 20px;
            cursor: pointer;
            color: #f34dca;
        }

        .conteudo p {
            overflow: hidden;
            height: 0px;
            transition: 3s;
        }

        .mostrar {
            height: 200px !important;
        }
