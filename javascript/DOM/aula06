    <style>
        .box{
            width: 200px;
            height: 200px;
            background-color: #f34dca;
            margin-left: 0;
        }

        .animEsquerda{
            transition: 2s;
            margin-left: 20px;
        }
    </style>
    <div class="box"></div>
    <script>
        var box = document.querySelectorAll('.box')[0];
        /*setTimeout(() => {
            box.classList.add('animEsquerda');
        },1000);*/

        box.addEventListener('click', function(){
            box.classList.add('animEsquerda');
        })
    </script>
