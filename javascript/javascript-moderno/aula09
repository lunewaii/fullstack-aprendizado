    <script>

        // fetch('https://jsonplaceholder.typicode.com/todos/1')
        // .then(response=> response.json()) //faz a requisição, ai coloca a resposta dentro de response.json
        // .then(json=>console.log(json)); //aparece a mesma coisa da aula anterior, mas com bem menos linhas
        
        fetch('https://jsonplaceholder.typicode.com/posts', { //uma simulaçao de inserir dados na api
            method: 'POST',
            body: JSON.stringify({
                title: 'dva',
                body: 'ta muito roubada no ow2, amem',
                userId: 10
            }),
            headers: {
                'Content-Type': 'application/json; charset=UTF-8'
            }
        })
        .then(response => response.json())
        .then(json => console.log(json));

    </script>
