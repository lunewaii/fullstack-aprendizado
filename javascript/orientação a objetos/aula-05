<!DOCTYPE html>
<html>
    <head>
        <title>datas</title>
    </head>

    <body>
        <script>

            var date = new Date(); //se não colocar algo no construtor, vai na data atual

            //dia do mês
            console.log(date.getDate()); //não esquecer do ()!

            //dia da semana, 0 -> domingo
            console.log(date.getDay());
            console.log(date.getFullYear());
            console.log(date.getMonth()); //janeiro -> 0
            //e vários outros.         

        </script>
    </body>
</html>
