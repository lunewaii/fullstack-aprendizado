<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>rock, paper, scisors!</title>
</head>
<body>

    <h1>rock, paper, scisors!</h1>
    <h2 class="winner"></h2>

    <div class="align">
        <div class="player1-opcoes">
            <div><img opt="rock" src="rock.png"></div>
            <div><img opt="paper" src="paper.png"></div>
            <div><img opt="scisor" src="scisor.png"></div>
        </div>
    
        <div class="player2-opcoes">
            <div><img opt="rock" src="rock.png"></div>
            <div><img opt="paper" src="paper.png"></div>
            <div><img opt="scisor" src="scisor.png"></div>
        </div>
    </div>

    <style>
    *{
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
    h1{
        text-align: center;
    }
    .align{
        display: flex;
    }
    .player1-opcoes,
    .player2-opcoes{
        width: 50%;
        padding: 20px;
    }
    .player1-opcoes img,
    .player2-opcoes img
    {
        max-width: 150px;
        cursor: pointer;
        opacity: 0.35;
    }
    </style>
   
    <script>
        var elementos = document.querySelectorAll('.player1-opcoes div > img');
        var player1Opt = "";
        var player2Opt = "";

        function resetarOpacidade(){ //reseta opacidade do aliado
            for(var i = 0; i < elementos.length; i++){
            elementos[i].style.opacity = 0.35
            }
        }

        function resetarOpacidade2(){ //reseta opacidade do inimigo
            const player2Options = document.querySelectorAll('.player2-opcoes div');
            for(var i = 0; i < player2Options.length; i++){
                player2Options[i].childNodes[0].style.opacity = 0.35;
            }
        }

        function validacaoWin(){
            let winner = document.querySelector('.winner');
            if(player1Opt == 'paper'){
                if(player2Opt == 'paper'){
                    winner.innerHTML = "Foi um empate!";
                }else if(player2Opt == 'rock'){
                    winner.innerHTML = "Você é o vencedor! Uhuuul";
                }else if(player2Opt == 'scisor'){
                    winner.innerHTML = "Você perdeu :(";
                }
            }
            if(player1Opt == 'rock'){
                if(player2Opt == 'rock'){
                    winner.innerHTML = "Foi um empate!";
                }else if(player2Opt == 'scisor'){
                    winner.innerHTML = "Você é o vencedor! Uhuuul";
                }else if(player2Opt == 'paper'){
                    winner.innerHTML = "Você perdeu :(";
                }
            }
            if(player1Opt == 'scisor'){
                if(player2Opt == 'scisor'){
                    winner.innerHTML = "Foi um empate!";
                }else if(player2Opt == 'paper'){
                    winner.innerHTML = "Você é o vencedor! Uhuuul";
                }else if(player2Opt == 'rock'){
                    winner.innerHTML = "Você perdeu :(";
                }
            }

        }

        for(var i = 0; i < elementos.length; i++){
            elementos[i].addEventListener('click', function(t){
                resetarOpacidade();
                t.target.style.opacity = 1
                player1Opt = t.target.getAttribute('opt');

                player2Jogar();
            });
        }

        function player2Jogar(){
            let rand = Math.floor(Math.random()*3);
            
            const player2Options = document.querySelectorAll('.player2-opcoes div');
            resetarOpacidade2();
            for(var i = 0; i < player2Options.length; i++){
                if(i == rand){
                    player2Options[i].childNodes[0].style.opacity = 1;
                    player2Opt = player2Options[i].childNodes[0].getAttribute('opt')
                }
            }


            validacaoWin();
        }

    </script>
</body>
</html>
